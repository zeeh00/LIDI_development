<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SplashFragment">


    <LinearLayout
        android:id="@+id/linearSplash"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoOpener1"
            android:layout_width="@dimen/_400pxh"
            android:layout_height="@dimen/_400pxh"
            android:layout_marginTop="@dimen/_90pxh"
            android:src="@drawable/logo_lidi_1"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/logoOpener"
            android:layout_width="@dimen/_400pxh"
            android:layout_height="@dimen/_150pxh"
            android:layout_marginTop="-150px"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_opener"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>