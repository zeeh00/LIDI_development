<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.animals.catatankhusus.CatatanKhususFragment">

    <FrameLayout android:id="@+id/frameInputKejadian"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_48pxv"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <LinearLayout android:id="@+id/linearColumnarrowleft"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_30pxh"
            android:layout_marginStart="@dimen/_30pxh"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearRowarrowleft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageButton
                    android:background="@drawable/rectangle_border_gray_200_radius_27_5"
                    android:id="@+id/btnArrowleft"
                    android:layout_height="@dimen/_55pxh"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="@dimen/_55pxh"
                    android:paddingHorizontal="@dimen/_18pxh"
                    android:paddingVertical="@dimen/_18pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrowleft_bluegray_800" tools:ignore="ContentDescription"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearColumncatatankhusus"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_weight="0.66"
                    android:layout_width="0dp" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtKEJADIANKHUSUS"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@string/lbl_kejadian_khusus"
                        style="@style/txtSFProDisplaybold24" />
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtAddKejadianKh"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.03"
                        android:singleLine="true"
                        android:text="Tambahkan Kejadian Khusus"
                        style="@style/txtSFProDisplayregular12"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_70pxh"
                    android:layout_height="@dimen/_70pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo_program_pengembangan"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtAction"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_action"
                style="@style/txtInterregular14"/>
            <Spinner
                android:background="@drawable/dropdown_list"
                android:gravity="center_horizontal"
                android:id="@+id/spinnerFormTypeKK"
                android:prompt="@string/lbl_action_cap"
                android:spinnerMode="dropdown"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_width="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/columnImgAnimal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"/>
    </FrameLayout>

    <FrameLayout android:id="@+id/containerFragmentKK"
        android:layout_height="470dp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_235pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_30pxh">
    </FrameLayout>


</RelativeLayout>