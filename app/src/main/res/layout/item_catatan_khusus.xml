<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Date -->
    <TextView android:ellipsize="end"
        android:id="@+id/txtDateKejadian"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_30pxh"
        android:layout_marginTop="@dimen/_14pxv"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:hint="Date"
        android:text=""
        style="@style/txtSFProDisplaybold24_1"/>

    <!--Kejadian Khusus / Judul-->
    <TextView android:ellipsize="end"
        android:id="@+id/txtKejadian"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_30pxh"
        android:layout_marginTop="@dimen/_55pxv"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:hint="Kejadian Khusus"
        android:text=""
        style="@style/txtSFProDisplaybold24_1"/>

    <!--Foto Kejadian Khusus-->
    <FrameLayout android:id="@+id/frameImgKejadian"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/_300pxv"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_30pxh"
        android:layout_marginTop="@dimen/_100pxv"
        android:layout_width="@dimen/_370pxh" style="@style/groupStylecornerRadius">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_15pxh">
            <ImageView
                android:id="@+id/imgKejadian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!--Catatan Khusus / Keterangan-->
    <TextView android:ellipsize="end"
        android:id="@+id/txtCatatan"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_30pxh"
        android:layout_marginTop="@dimen/_408pxv"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:hint="Catatan Khusus"
        android:text=""
        style="@style/txtSFProDisplaymedium16"/>


</RelativeLayout>