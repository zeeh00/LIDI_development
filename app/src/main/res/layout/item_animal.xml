<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout android:id="@+id/frameInformation"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_120pxh" android:layout_width="@dimen/_287pxh">
        <LinearLayout android:id="@+id/linearInformation"
            android:layout_gravity="center"
            android:layout_height="@dimen/_80pxv"
            android:layout_marginBottom="@dimen/_14pxv"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumnInformation"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:layout_width="0dp" android:orientation="vertical">
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowovalcopytwo2"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_width="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/red_mark"
                        android:id="@+id/viewOvalCopyTwo"
                        android:layout_height="@dimen/_9pxh"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_marginTop="@dimen/_5pxv" android:layout_width="@dimen/_9pxh"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtAnimalLocation"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4pxh"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:hint="Location"
                        style="@style/txtHelveticaNeuemedium12"/>
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtAnimalId"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:hint="ID"
                    android:text=""
                    style="@style/txtSFProDisplaybold16"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtAnimalRace"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.04"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    android:hint="Race"
                    android:text=""
                    style="@style/txtSFProDisplaymedium12"/>
            </LinearLayout>
            <ImageView android:id="@+id/three_dots"
                android:layout_height="@dimen/_3pxh"
                android:layout_marginBottom="@dimen/_61pxv"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="@dimen/_13pxh"
                android:scaleType="fitXY"
                android:src="@drawable/three_dots"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

    </FrameLayout>

    <androidx.cardview.widget.CardView

        android:layout_gravity="start"
        android:layout_height="@dimen/_92pxh"
        android:layout_marginBottom="@dimen/_1pxv"
        android:layout_marginEnd="@dimen/_10pxh"
        android:layout_marginTop="@dimen/_1pxv"
        android:layout_marginStart="@dimen/_10pxh"
        android:layout_width="@dimen/_104pxh"
        app:cardCornerRadius="@dimen/_16sp">

        <ImageView
            android:id="@+id/imageAnimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>