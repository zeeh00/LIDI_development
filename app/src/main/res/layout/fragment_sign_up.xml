<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.signup.SignUpFragment">

    <FrameLayout android:id="@+id/frameRegistrationFo"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <LinearLayout android:id="@+id/linearColumnarrowleft"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_40pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:id="@+id/linearRowarrowleft"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageButton
                        android:background="@drawable/rectangle_border_gray_200_radius_27_5"
                        android:id="@+id/btnArrowleft"
                        android:layout_height="@dimen/_55pxh"
                        android:layout_width="@dimen/_55pxh"
                        android:paddingHorizontal="@dimen/_18pxh"
                        android:paddingVertical="@dimen/_18pxv"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_arrowleft_bluegray_800" tools:ignore="ContentDescription"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtRegister"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8pxv"
                        android:layout_marginStart="@dimen/_83pxh"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_weight="0.66"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@string/lbl_register"
                        style="@style/txtSFProDisplaybold28"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linearColumngroup6802"
                    style="@style/groupStylecornerRadius_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:gravity="start"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_Usr_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/bluegray_300">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/USR_NAME"
                            style="@style/etSolidRounded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:hint="@string/lbl_username"
                            android:inputType="text"
                            android:letterSpacing="0.04"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_20pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_22pxv"
                            android:singleLine="true"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_Full_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_22pxv"
                        android:textColorHint="@color/bluegray_300">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/USR_FULLNAME"
                            style="@style/etSolidRounded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:hint="@string/lbl_fullname"
                            android:inputType="text"
                            android:letterSpacing="0.04"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_20pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_22pxv"
                            android:singleLine="true"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_Usr_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/bluegray_300"
                        android:layout_marginTop="@dimen/_22pxv">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/USR_EMAIL"
                            style="@style/etSolidRounded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_bg_gray_102_radius_15"
                            android:ellipsize="end"
                            android:hint="@string/lbl_email"
                            android:inputType="textEmailAddress"
                            android:letterSpacing="0.04"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_20pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_22pxv"
                            android:singleLine="true"

                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_role"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Role"
                        android:textColorHint="@color/bluegray_300"
                        android:layout_marginTop="@dimen/_22pxv"
                        >
                        <AutoCompleteTextView
                            android:id="@+id/USR_ROLE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            style="@style/etSolidRounded"
                            android:letterSpacing="0.04"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_20pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_22pxv"
                            android:singleLine="true"
                            tools:ignore="Autofill"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_Phn_Num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_22pxv"
                        android:textColorHint="@color/bluegray_300">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/USR_PHN_NUM"
                            style="@style/etSolidRounded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_bg_gray_102_radius_15"
                            android:ellipsize="end"
                            android:hint="@string/lbl_phone_number"
                            android:inputType="phone"
                            android:letterSpacing="0.04"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_20pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_22pxv"
                            android:singleLine="true"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true"
                        android:layout_marginTop="@dimen/_22pxv"
                        android:textColorHint="@color/bluegray_300">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/USR_PSWRD"
                            style="@style/etSolidRounded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_bg_gray_102_radius_15"
                            android:ellipsize="end"
                            android:inputType="textPassword"
                            android:hint="@string/lbl_password"
                            android:letterSpacing="0.04"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_20pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_22pxv"
                            android:singleLine="true"
                            tools:ignore="Autofill">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_Conf_Pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true"
                        android:layout_marginTop="@dimen/_22pxv"
                        android:textColorHint="@color/bluegray_300">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/USR_CON_PSWRD"
                            style="@style/etSolidRounded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_22pxv"
                            android:background="@drawable/rectangle_bg_gray_102_radius_15"
                            android:ellipsize="end"
                            android:hint="@string/msg_confirm_password"
                            android:inputType="textPassword"
                            android:letterSpacing="0.04"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_20pxv"
                            android:paddingEnd="@dimen/_30pxh"
                            android:paddingBottom="@dimen/_22pxv"
                            android:singleLine="true"
                            tools:ignore="Autofill">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnSignUp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginEnd="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_41pxv"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.05"
                        android:paddingBottom="@dimen/_19pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_19pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_sign_up"
                        android:textAllCaps="false"
                        style="@style/btnSolidRounded_1" tools:text="@string/lbl_sign_up"/>
                    <TextView android:ellipsize="end" android:id="@+id/txtOR"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_64pxh"
                        android:layout_marginStart="@dimen/_64pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.04" android:singleLine="true"
                        android:text="@string/lbl_or"
                        style="@style/txtSFProDisplaymedium16bg" tools:text="@string/lbl_or"/>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearRowgoogle"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:layout_width="match_parent"
                        android:orientation="horizontal" style="@style/groupStylecornerRadius_2">
                        <ImageView android:id="@+id/imageGoogle"
                            android:layout_height="@dimen/_24pxh"
                            android:layout_marginBottom="@dimen/_19pxv"
                            android:layout_marginStart="@dimen/_29pxh"
                            android:layout_marginTop="@dimen/_19pxv"
                            android:layout_width="@dimen/_23pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/google_logo"
                            tools:ignore="ContentDescription" tools:src="@drawable/google_logo"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtCONTINUEWITHG"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_22pxv"
                            android:layout_marginEnd="@dimen/_92pxh"
                            android:layout_marginStart="@dimen/_40pxh"
                            android:layout_marginTop="@dimen/_24pxv"
                            android:layout_weight="0.89"
                            android:layout_width="0dp"
                            android:letterSpacing="0.04"
                            android:singleLine="true"
                            android:text="@string/msg_continue_with_g"
                            style="@style/txtHelveticaNeuemedium14" tools:text="@string/msg_continue_with_g"/>
                    </LinearLayout>
                    <TextView android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:id="@+id/txt_alr_have_acc"
                        android:layout_height="@dimen/_30pxv"
                        android:layout_marginEnd="@dimen/_30pxh"
                        android:layout_marginStart="@dimen/_50pxh"
                        android:layout_marginTop="@dimen/_30pxv"
                        android:layout_width="wrap_content"
                        android:letterSpacing="0.03" android:singleLine="true"
                        android:text="@string/msg_already_have_an"
                        style="@style/txtHelveticaRounded14" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>